<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="section-title text-center mb-30">
        <span class="sub-title">{{ section.settings['sub-heading'] }}</span>
        <h2 class="title">
          {{ section.settings.heading }}
          <div>
            {% if section.settings.header_bg != blank %}
              {{ section.settings.header_bg | image_url: width: auto | image_tag: loading: 'lazy' }}
            {% endif %}
          </div>
        </h2>
        {% if section.settings.heading_desc != blank %}
          <p>{{ section.settings.heading_desc }}</p>
        {% endif %}
      </div>
    </div>
  </div>
</div>
