<!-- core-features -->
<section class="core-features-area">
  <div class="container">
    <div class="core-features-border">
      <div class="row justify-content-center">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'core-feature-card' -%}
              <div class="col-xl-3 col-lg-4 col-sm-6">
                <div class="core-features-item mb-50">
                  <div class="core-features-icon">
                    {% if block.settings.feature_img != blank %}
                      {{ block.settings.feature_img | image_url: width: auto | image_tag: loading: 'lazy' }}
                    {% endif %}
                  </div>
                  <div class="core-features-content">
                    <h6>{{ block.settings.feature_title }}</h6>
                    <span>{{ block.settings.feature_des }}</span>
                  </div>
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>
<!-- core-features-end -->

{% schema %}
{
  "name": "Core Features",
  "blocks": [
    {
      "type": "core_feature_card",
      "name": "Feature card",
      "settings": [
        {
          "type": "text",
          "id": "feature_title",
          "label": "Feature Title",
          "default": "Online Support"
        },
        {
          "type": "image_picker",
          "id": "feature_img",
          "label": "Feature Image"
        },
        {
          "type": "text",
          "id": "feature_des",
          "label": "Feature description",
          "default": "30 days money back guarantee"
        }
      ],
      "limit": 8
    }
  ],
  "presets": [
    {
      "name": "Core Features",
      "blocks": [
        {
          "type": "core_feature_card"
        }
      ]
    }
  ]
}
{% endschema %}
